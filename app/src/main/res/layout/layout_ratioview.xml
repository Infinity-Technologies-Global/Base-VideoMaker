<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_main_edit"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_top_bar"
        layout="@layout/item_layout_edit_top_view" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="bottom|center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_ratio_1_1"
                android:layout_width="@dimen/size56"
                android:layout_height="@dimen/size56"
                android:background="@drawable/select_ratio_1_1" />

            <ImageView
                android:id="@+id/image_ratio_4_5"
                android:layout_width="@dimen/size44"
                android:layout_height="@dimen/size58"
                android:layout_marginStart="@dimen/size25"
                android:layout_marginLeft="@dimen/size25"
                android:background="@drawable/select_ratio_4_5" />

            <ImageView
                android:id="@+id/image_ratio_9_16"
                android:layout_width="@dimen/size40"
                android:layout_height="@dimen/size60"
                android:layout_marginStart="@dimen/size25"
                android:layout_marginLeft="@dimen/size25"
                android:background="@drawable/select_ratio_9_16" />

            <ImageView
                android:id="@+id/image_ratio_16_9"
                android:layout_width="@dimen/size60"
                android:layout_height="@dimen/size40"
                android:layout_marginStart="@dimen/size25"
                android:layout_marginLeft="@dimen/size25"
                android:background="@drawable/select_ratio_16_9" />

            <ImageView
                android:id="@+id/image_ratio_4_3"
                android:layout_width="@dimen/size60"
                android:layout_height="@dimen/size40"
                android:layout_marginStart="@dimen/size25"
                android:layout_marginLeft="@dimen/size25"
                android:background="@drawable/select_ratio_4_3" />

            <ImageView
                android:id="@+id/image_ratio_2_3"
                android:layout_width="@dimen/size40"
                android:layout_height="@dimen/size60"
                android:layout_marginStart="@dimen/size25"
                android:layout_marginLeft="@dimen/size25"
                android:background="@drawable/select_ratio_2_3" />

            <ImageView
                android:id="@+id/image_ratio_2_1"
                android:layout_width="@dimen/size60"
                android:layout_height="@dimen/size30"
                android:layout_marginStart="@dimen/size25"
                android:layout_marginLeft="@dimen/size25"
                android:background="@drawable/select_ratio_2_1" />
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>