<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#c7373a" />
            <corners android:radius="6dp" />
            <gradient android:endColor="@color/color_main2" android:startColor="@color/color_main1" />

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ff494c" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ff494c" />
            <corners android:radius="6dp" />
            <gradient
                android:angle="45"
                android:endColor="@color/color_main2" android:startColor="@color/color_main1" />
        </shape>
    </item>
</selector>